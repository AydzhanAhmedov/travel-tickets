<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="bg.tuvarna.traveltickets.controller.ClientsTableController">
    <top>
        <HBox prefHeight="40.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" text="Add"/>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <Button mnemonicParsing="false" text="Delete"/>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <Button mnemonicParsing="false" text="Update"/>
                <Separator orientation="VERTICAL" prefHeight="200.0"/>
                <Button mnemonicParsing="false" text="View"/>
            </children>
        </HBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tableClients" prefHeight="360.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="columnType" prefWidth="75.0" text="Type" reorderable="false"/>
                        <TableColumn fx:id="columnName" prefWidth="75.0" text="Name" reorderable="false"/>
                        <TableColumn fx:id="columnPhone" prefWidth="115.99993896484375" text="Phone" reorderable="false"/>
                        <TableColumn fx:id="columnCity" minWidth="8.800048828125" prefWidth="63.199951171875" text="City" reorderable="false"/>
                        <TableColumn fx:id="columnRegion" prefWidth="100.0" text="Region" reorderable="false"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
